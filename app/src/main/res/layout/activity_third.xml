<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/recipe3"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Ingridients:"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 boneless, skinless chicken breasts, cut into bite-sized chunks"
            android:id="@+id/check_1" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2 bunch of asparagus, rinsed and trimmed"
            android:id="@+id/check_2"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1/2 cup butter, softened"
            android:id="@+id/check_3"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1 teaspoon olive oil"
            android:id="@+id/check_4"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2 teaspoons minced garlic"
            android:id="@+id/check_5"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1 teaspoon Italian seasoning or Herbes de Provence"
            android:id="@+id/check_6"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1 tablespoon hot sauce, optional (we used Sriracha)"
            android:id="@+id/check_7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Description:"
            android:textStyle="bold"/>



    </LinearLayout>



</ScrollView>
